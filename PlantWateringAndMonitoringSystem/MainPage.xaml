<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlantWateringAndMonitoringSystem.MainPage">

    <ScrollView>
        <Grid ColumnDefinitions="*, *, *, *" RowDefinitions="*, *">
            <!--Sensor Headers-->
            <Label Text="Light" Grid.Column="0" Grid.Row="0" HorizontalOptions="Center" FontSize="32" Margin="32"></Label>
            <Label Text="Moisture" Grid.Column="1" Grid.Row="0" HorizontalOptions="Center" FontSize="32" Margin="32"></Label>
            <Label Text="Temperature" Grid.Column="2" Grid.Row="0" HorizontalOptions="Center" FontSize="32" Margin="32"></Label>
            <Label Text="Humidity" Grid.Column="3" Grid.Row="0" HorizontalOptions="Center" FontSize="32" Margin="32"></Label>

            <!--Last Sensor Data-->
            <Label Text="Value" Grid.Column="0" Grid.Row="1" HorizontalOptions="Center"></Label>
            <Label Text="Value" Grid.Column="1" Grid.Row="1" HorizontalOptions="Center"></Label>
            <Label Text="Value" Grid.Column="2" Grid.Row="1" HorizontalOptions="Center"></Label>
            <Label Text="Value" Grid.Column="3" Grid.Row="1" HorizontalOptions="Center"></Label>

            <!--Sensor Value Graphs-->
        </Grid>
    </ScrollView>

</ContentPage>
